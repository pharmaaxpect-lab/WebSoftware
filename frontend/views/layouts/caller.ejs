  <script>
  

  function logout() {
    localStorage.clear();
    window.location.href = "/";
  }

  async function verifyToken() {

    const token = localStorage.getItem('token');
    const role = localStorage.getItem('role');

    if (!token || role != "CALLER") return logout();

    try {
      const res = await fetch("http://localhost:2000/api/caller/auth/verify", {
        method: "POST",
        headers: { 
          "Content-Type": "application/json",
          "Authorization": "Bearer " + token
          
        }
      });

      const data = await res.json();
      if (!res.ok || !data.success) {
        logout();
      }
    } catch {
      logout();
    }
  }

  // ðŸš€ Check once at page load
  verifyToken();

  // ðŸš€ Keep checking every 1 minute (60000 ms)
  setInterval(verifyToken, 60000);
</script>
